<%= form_for @guest do |f| %>
<%= render partial: "devise/shared/error_messages", locals: { resource: @guest } %>
  <div class="form-row">
    <div class="form-group col-md-6">
    <%= f.text_field :first_name, {class: "form-control", placeholder: "First Name"} %>
    </div>

    <div class="form-group col-md-6">
    <%= f.text_field :last_name, {class: "form-control", placeholder: "Last Name"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :street, "Address" %>
    <%= f.text_field :street, {class: "form-control", placeholder: "1234 Main St"} %>
  </div>

  <div class="form-group">
    <%= f.label :address2 %>
    <%= f.text_field :address2, {class: "form-control", placeholder: "Apartment, studio, or floor"} %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group col-md-2">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: "form-control" %>
    </div>

  </div>

  <div class="form-check form-check-inline">
    <fieldset>
      <legend>Events</legend>
      <%= f.collection_check_boxes(:event_ids, current_user.events, :id, :name) do |b| %>
        <%= b.label(class: "form-check-label") %>
        <%= b.check_box(class: "form-check-input") %>
      <% end %>
    </fieldset>
  </div>

  <div>
    <br>
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
